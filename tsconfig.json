{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "declarationMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "noFallthroughCasesInSwitch": true,
    "useUnknownInCatchVariables": false,
    "paths": {
      "@common/mongodb": [
        "common/mongodb/src"
      ],
      "@common/rabbitmq": [
        "common/rabbitmq/src"
      ],
      "@api/user-query": [
        "apps/user/api-user-query/src"
      ],
      "#user-query/*": [
        "apps/user/user-query/src/*"
      ],
      "@common/user": [
        "common/user/src"
      ],
      "@core/user": [
        "core/user/src"
      ],
    }
  }
}